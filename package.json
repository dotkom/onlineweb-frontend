    "lint-ts:fix": "tslint --fix -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint-less:fix": "yarn lint-less --fix",
    "lint-prettier:fix": "prettier-check --write src/**/*.{ts,tsx,less}",
    "test": "jest --env=jsdom"
